<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="cliniquePU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/CliniqueDS</jta-data-source>

        <class>com.clinique.domain.Department</class>
        <class>com.clinique.domain.Specialty</class>
        <class>com.clinique.domain.User</class>
        <class>com.clinique.domain.Patient</class>
        <class>com.clinique.domain.Doctor</class>
        <class>com.clinique.domain.MedicalRecord</class>
        <class>com.clinique.domain.MedicalNote</class>
        <class>com.clinique.domain.Appointment</class>
        <class>com.clinique.domain.WaitingListEntry</class>
        <class>com.clinique.domain.Availability</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <!-- Use ONLY Hibernate's schema generation -->
            <property name="hibernate.hbm2ddl.auto" value="create"/>

            <!-- Disable Jakarta Persistence schema generation to avoid conflicts -->
            <!-- Remove hibernate.hbm2ddl.auto -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="jakarta.persistence.schema-generation.create-source" value="metadata"/>
            <property name="jakarta.persistence.schema-generation.drop-source" value="metadata"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.region.factory_class" value="org.infinispan.hibernate.cache.v53.InfinispanRegionFactory"/>

            <property name="jakarta.persistence.validation.mode" value="AUTO"/>
        </properties>

    </persistence-unit>
</persistence>