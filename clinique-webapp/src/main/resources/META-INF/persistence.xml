<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="cliniquePU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/CliniqueDS</jta-data-source>

        <class>com.clinique.domain.Department</class>
        <class>com.clinique.domain.Specialty</class>
        <class>com.clinique.domain.User</class>
        <class>com.clinique.domain.Patient</class>
        <class>com.clinique.domain.Doctor</class>
        <class>com.clinique.domain.MedicalRecord</class>
        <class>com.clinique.domain.MedicalNote</class>
        <class>com.clinique.domain.Appointment</class>
        <class>com.clinique.domain.WaitingListEntry</class>
        <class>com.clinique.domain.Availability</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <!-- Options: validate | update | create | create-drop -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

            <!-- Force JPA to generate schema in container -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="jakarta.persistence.schema-generation.create-source" value="metadata"/>
            <property name="jakarta.persistence.schema-generation.drop-source" value="metadata"/>
            <property name="jakarta.persistence.schema-generation.scripts.action" value="none"/>

            <!-- Charger import.sql automatiquement -->
            <property name="hibernate.hbm2ddl.import_files" value="import.sql"/>

            <!-- Dialecte PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Affichage des requêtes SQL (pour le développement) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <!-- Configuration du cache de second niveau -->
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.region.factory_class" value="org.infinispan.hibernate.cache.v53.InfinispanRegionFactory"/>

            <!-- Validation automatique du schéma -->
            <property name="jakarta.persistence.validation.mode" value="AUTO"/>
        </properties>
    </persistence-unit>
</persistence>